<Window x:Class="CopilotChatWPF.SaveOptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Speichern als" Height="200" Width="300">
    <Grid>
        <Button x:Name="btnJson" Content="JSON-Datei" Click="btnJson_Click" Margin="10,10,10,50" />
        <Button x:Name="btnCsv" Content="CSV-Datei" Click="btnCsv_Click" Margin="10,60,10,10" />
        <Button x:Name="btnBoth" Content="Beide" Click="btnBoth_Click" Margin="10,110,10,10" />
        <Button x:Name="btnNone" Content="Nicht speichern" Click="btnNone_Click" Margin="10,160,10,10" />
    </Grid>
</Window>